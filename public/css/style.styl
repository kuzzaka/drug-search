body
  padding: 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  background-image  url("images/background.svg")
  background-size cover
  background-blend-mode lighten
  background-color: rgba(211, 211, 211, 0.8)

* + *
  margin-top: .5rem

a
  color: #00B7FF
h1
  margin-top 10rem
h1, p
  text-align center

input[type="search"]
  display block
  padding: .5rem
  width 70%
  font-size: 16px
  margin .5rem auto

form
  padding: 4rem 2rem
  fieldset
    label
      display block
    input
      padding-left 2rem

button
  display block
  padding 1rem
  margin 2rem auto
  cursor pointer

.chosen-drugs
  margin-top 1rem
  div
    border 1px gray dashed
    cursor pointer
    &:hover
      border-color darkred
      &:before, &:after
        opacity: 1
.close
  position: relative;

.close:hover
  opacity: 1

.close:before, .close:after
  position: absolute;
  right: .5rem
  content: ' '
  height: 1rem
  width: .2rem
  background-color: darkred
  opacity: 0

.close:before {
  transform: rotate(45deg);
}

.close:after {
  transform: rotate(-45deg);
}